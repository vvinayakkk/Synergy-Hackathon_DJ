{
  "manifest_version": 3,
  "name": "Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze sentiment and stock prices from selected text",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*",
    "https://www.alphavantage.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["chart.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}